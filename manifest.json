{
	"manifest_version": 3,
	"name": "YouTube Continue Watching",
	"version": "1.0.0",
	"author": "YouTube Continue Watching Contributors",
	"homepage_url": "https://github.com/yourusername/youtube-continue-watching",
	"description": "Prevents YouTube from pausing videos with the 'Continue watching?' dialog, allowing uninterrupted playback of music, podcasts, and long-form content.",
	"icons": {
		"16": "icons/icon-16.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},
	"permissions": [
		"storage"
	],
	"host_permissions": [
		"*://*.youtube.com/*"
	],
	"action": {
		"default_popup": "popup/popup.html",
		"default_icon": {
			"16": "icons/icon-16.png",
			"48": "icons/icon-48.png",
			"128": "icons/icon-128.png"
		},
		"default_title": "YouTube Continue Watching"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.youtube.com/*"
			],
			"js": [
				"content-scripts/youtube-continue.js"
			],
			"css": [
				"content-scripts/inject-styles.css"
			],
			"run_at": "document_start"
		}
	],
	"background": {
		"service_worker": "background/service-worker.js"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "youtube-continue-watching@example.com",
			"strict_min_version": "147.0",
			"data_collection_permissions": false
		}
	}
}