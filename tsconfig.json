{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": false,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"moduleResolution": "bundler",
		"types": [
			"bun-types",
			"firefox-webext-browser"
		]
	},
	"include": [
		"**/*.js"
	],
	"exclude": [
		"node_modules",
		"web-ext-artifacts"
	]
}